<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.houtai.mapper.RoleMapper">

    <select id="selectRoleList" resultType="com.houtai.entity.Role">
        SELECT
        id, name, code, description, create_time, update_time, permission
        FROM role
        <where>
            <if test="params.name != null and params.name != ''">
                AND name LIKE CONCAT('%', #{params.name}, '%')
            </if>
            <if test="params.code != null and params.code != ''">
                AND code LIKE CONCAT('%', #{params.code}, '%')
            </if>
        </where>
        ORDER BY create_time DESC
    </select>

    <select id="selectByCode" resultType="com.houtai.entity.Role">
        SELECT * FROM role WHERE code = #{code}
    </select>

</mapper>